<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo.png", height: 50 %>
  <% end %>
  <!-- if in recipe page, push title here when scrolled enough -->
  <div class="hidden" id="navbar-recipe-title"></div>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <div class="navbar-wagon-item hidden-xs hidden-sm">
        <div class="dropdown">
          <span class="dropdown-toggle", data-toggle="dropdown">Menu</span>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to new_recipe_path , remote: true, class: "navbar-wagon-item navbar-wagon-link" do %>
                <i class="fa fa-plus-square"></i> New Recipe
              <% end %>
            </li>
            <li>
              <%= link_to recipes_path , class: "navbar-wagon-item navbar-wagon-link" do %>
                <i class="fa fa-list-ul"></i> All Recipes
              <% end %>
            </li>
            <li>
              <%= link_to "#" , class: "navbar-wagon-item navbar-wagon-link" do %>
                <i class="fa fa-filter"></i> By Category
              <% end %>
            </li>
            <li>
              <%= link_to recipes_path , class: "navbar-wagon-item navbar-wagon-link" do %>
                <i class="fa fa-star"></i> Favorites
              <% end %>
            </li>
          </ul>
        </div>
      </div>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item hidden-xs hidden-sm">
        <div class="dropdown">
          <% if current_user.photo.url %>
            <%= image_tag current_user.photo.url(:bright_face), class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <% else %>
            <%= image_tag "http://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <% end %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to profile_path(current_user.id), remote: true do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

      <!-- Dropdown list appearing on mobile only -->
      <div class="navbar-wagon-item hidden-md hidden-lg">
        <div class="dropdown">
          <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to new_recipe_path , remote: true, class: "navbar-wagon-item navbar-wagon-link" do %>
                <i class="fa fa-plus-square"></i> New Recipe
              <% end %>
            </li>
            <li>
              <%= link_to recipes_path , class: "navbar-wagon-item navbar-wagon-link" do %>
                <i class="fa fa-list-ul"></i> All Recipes
              <% end %>
            </li>
            <li>
              <%= link_to "#" , class: "navbar-wagon-item navbar-wagon-link" do %>
                <i class="fa fa-filter"></i> By Category
              <% end %>
            </li>
            <li>
              <%= link_to recipes_path , class: "navbar-wagon-item navbar-wagon-link" do %>
                <i class="fa fa-star"></i> Favorites
              <% end %>
            </li>
            <li>
              <%= link_to profile_path(current_user.id), remote: true do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>

</div>

