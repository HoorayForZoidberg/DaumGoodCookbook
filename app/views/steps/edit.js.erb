// hide current step
$('#<%= "step_#{@step.id}" %> > *').addClass("hidden");
// add edit box
$('#<%= "step_#{@step.id}" %>').append('<%= j render "steps/form", recipe: @recipe, step: @step %>');

// add eventListener for Cancel button
$('#<%= "step_#{@step.id}" %> .cancel-step').click(function(){
  // show current step
  $('#<%= "step_#{@step.id}" %> > *').removeClass("hidden");
  // remove edit box
  $('#<%= "step_#{@step.id}" %> > .owner-edit').remove();
})
