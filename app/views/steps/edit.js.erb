// hide current step
$('#<%= "step_#{@step.id}" %> > *').hide();
// add edit box
$('#<%= "step_#{@step.id}" %>').append('<%= j render "steps/form", recipe: @recipe, step: @step %>');

// add eventListener for Cancel button - THIS SHOULD BE ITS OWN PARTIAL
$('#<%= "step_#{@step.id}" %> .cancel-step').click(function(e){
  e.preventDefault();
  // show current step
  $('#<%= "step_#{@step.id}" %> > *').show();
  // remove edit box
  $('#<%= "step_#{@step.id}" %> > .new-step-form').remove();
})
