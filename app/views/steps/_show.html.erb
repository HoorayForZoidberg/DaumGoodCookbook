<% if @recipe.steps.blank? %>
  <p>(this recipe has no steps yet)</p>
<% else %>
  <ol class="sortable" data-url=" <%= sort_recipe_steps_path(@recipe.id) %> ">
    <% @recipe.steps.order(:position).each do |step| %>
      <li id=<%= dom_id(step) %>>
        <div class="flex justify-start">
          <div class="editable icon-column hidden">
            <i class="fa fa-arrows handle editable hidden" aria-hidden="true"></i>
            <span class="edit-button">
              <%= link_to '<i class="fa fa-pencil" aria-hidden="true"></i>'.html_safe, edit_recipe_step_path(@recipe.id, step.id), remote: true %>
            </span>
            <span class="delete-button">
              <%= link_to '<i class="fa fa-trash-o" aria-hidden="true"></i>'.html_safe,
                recipe_step_path(@recipe.id, step.id),
                method: :delete,
                data: { confirm: "Are you sure you want to delete this step?" },
                remote: true %>
            </span>
          </div>
          <div class="instructions">
            <%= step.instructions %>
          </div>
        </div>
      </li>
    <% end %>
  </ol>
<% end %>
