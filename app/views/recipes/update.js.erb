// Update recipe title
$("#recipe-info").html('<%= j render "recipe_info" %>');
// reload edit button click listener
$(".edit-mode").click(function(e){
    e.preventDefault();
    $(".edit-mode a").toggleClass("hidden");
    $(".editable:not(.comments-container)").toggleClass("hidden");
  });
// update navbar title
let title = $("#recipe-title h1").html();
  $("#navbar-title").html(`<h1>${title}</h1>`);
  $('#navbar-title').hide();
// turn off edit mode on other items
$("#recipe .editable").toggleClass("hidden");
// close modal
$('#modal-window').modal('toggle');

