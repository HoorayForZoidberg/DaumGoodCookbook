<%= simple_form_for(@recipe) do |f| %>
  <% if @recipe.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @recipe.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.input :category, label: "Select a category", requirefd: :true, collection: @categories %>
  <%= f.submit %>
<% end %>
