<div class="measure">
  <h2>
    <%= @measure.name.capitalize %>
    <span class="edit-button">
      <%= link_to '<i class="fas fa-edit" aria-hidden="true"></i>'.html_safe, edit_measure_path(@measure.id) %>
    </span>
    <span class="delete-button">
      <%= link_to '<i class="fas fa-trash" aria-hidden="true"></i>'.html_safe,
        measure_path(@measure.id),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
    </span>
  </h2>
  <!-- no description to show, but maybe image later -->
</div>
